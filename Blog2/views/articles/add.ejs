<form action="/articles/" method="POST">
    <div>
        <label for="title">Title</label>
        <input type="text" required name="title" id="title" value=<%= article.title %> >
    </div>
    <div>
        <label for="description">Descrption</label>
        <textarea name="description" id="description" cols="30" rows="10"><%= article.description %></textarea>
    </div>
    <div>
        <label for="markdown">Markdown</label>
        <textarea name="markdown" required id="markdown" cols="30" rows="10"><%= article.markdown %></textarea>
    </div>
    <a href="/articles/all">Cancel</a>
    <input type="submit" value="Add">
</form>